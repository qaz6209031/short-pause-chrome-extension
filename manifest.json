{
  "manifest_version": 3,
  "name": "Pause",
  "version": "1.1",
  "description": "Break the autopilot. Be conscious before you scroll.",
  "permissions": ["storage"],
  "icons": {
    "16": "assets/128x128.png",
    "32": "assets/128x128.png",
    "48": "assets/128x128.png",
    "128": "assets/128x128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Pause",
    "default_icon": {
      "16": "assets/128x128.png",
      "32": "assets/128x128.png",
      "48": "assets/128x128.png",
      "128": "assets/128x128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.tiktok.com/*",
        "*://www.instagram.com/*",
        "*://www.youtube.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ]
}
